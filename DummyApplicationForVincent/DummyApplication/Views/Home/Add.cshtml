@{
    ViewBag.Title = "Add";
}

<div class="row align-content-center mt-5">
    <div class="col"></div>
    <div class="col">
        <form method="post" action="@Url.Action("Add","Home")">
            <div class="form-group">
                <label for="exampleInputEmail1">Please Enter User Name</label>
                <input type="text" class="form-control" id="exampleInputEmail1" required name="UserName" aria-describedby="emailHelp" placeholder="Enter user name">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Please Enter User Email</label>
                <input type="email" class="form-control" id="exampleInputPassword1" required name="UserEmail" placeholder="Enter email">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Please Enter User Address</label>
                <textarea class="form-control" name="UserAddress" required placeholder="Please Enter Address" cols="5" rows="8"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Add a new user</button>
        </form>
    </div>
    <div class="col"></div>
</div>